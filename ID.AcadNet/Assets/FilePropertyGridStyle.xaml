                                                                                    <GradientStop Color="#20FFCE68" Offset="0.39"/>
                                                                                    <GradientStop Color="#20FFCE68" Offset="0.69"/>
                                                                                    <GradientStop Color="#10FFFFFF" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </MultiTrigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </RadioButton.Style>
                                            <Image Height="16" Width="16">
                                                <Image.Source>
                                                    <BitmapImage UriSource="pack://application:,,,/Xceed.Wpf.Toolkit;v2.4.0.0;component/PropertyGrid/Images/Categorize16.png"/>
                                                </Image.Source>
                                            </Image>
                                        </RadioButton>
