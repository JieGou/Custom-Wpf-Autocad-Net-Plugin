    <Style x:Key="FilePropertyGridStyle1" TargetType="{x:Type xctk:PropertyGrid}">
        <Style.Resources>
            <xctk:SelectedObjectConverter x:Key="objectConverter"/>
        </Style.Resources>
        <Setter Property="Background" Value="#FFBCC7D8"/>
        <Setter Property="BorderBrush" Value="#FF43577B"/>
        <Setter Property="BorderThickness" Value="1"/>
