                                                                                    <GradientStop Color="#FFF7D7B5" Offset="0.1"/>
                                                                                    <GradientStop Color="#FFFFD38C" Offset="0.36"/>
                                                                                    <GradientStop Color="#FFFFC75A" Offset="0.36"/>
                                                                                    <GradientStop Color="#FFFFEFA5" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
